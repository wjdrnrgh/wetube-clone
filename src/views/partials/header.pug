header 
    div#logo__box.header__box
        a(href="/").header__logo
            i.fa-brands.fa-youtube
            span Wetube
    div#search__box.header__box
        form#search__form(method="GET" action="/search")
            input(name="keyword" placeholder="Search By Video Title" required)
            button(type="submit") 
                i.fas.fa-search
    nav
        ul.nav__list
            if loggedIn
                li
                    a(href="/users/edit") Edit Profile
                li 
                    a(href="/users/logout") Logout
                li 
                    a(href="/videos/upload") Upload Video
                li 
                    a(href=`/users/${user._id}`)
                        if user.avatarUrl
                            if user.avatarUrl.includes("githubuser")
                                img.header__profile(src=user.avatarUrl, alt="Profile")
                            else
                                img.header__profile(src="/"+user.avatarUrl, alt="Profile")
                        else
                            div.none__profile
                                i.fa-solid.fa-user
            else
                li 
                    a(href="/login") Login
                li 
                    a(href="/join").header__btn Join
