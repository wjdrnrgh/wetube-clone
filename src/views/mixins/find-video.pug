mixin find-video(video)
        div.find__video
            div.thumbnail__wrap
                a(href=`/videos/${video.id}`) 
                    img#find__thumbnail__img(src="/uploads/imgs/Thumbnail.jpg", alt="Thumbnail")
            div.find__video__info
                h3#find__video__title
                    a(href=`/videos/${video.id}`)=video.title
                p.video__subTxt=video.description
                a(href=`/users/${String(video.owner._id)}`).video__subTxt=video.owner.name
                div.garbage__box
                ul#video__hashtags
                    each hashtag in video.hashtags
                        li.video__subTxt=hashtag
                    else
                        li.video__subTxt No HashTags.
                div.garbage__box
                p.video__subTxt=video.createdAt
                div.garbage__box
                p.video__subTxt 조회수 #{video.meta.views}회