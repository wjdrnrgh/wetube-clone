extends layout.pug

block content
    div.content__wrap
        if errorMessage 
            h3=errorMessage
        form.form__st(method="POST" action="" enctype="multipart/form-data") 
            label.upload__btn(for="video")
                i.fa-solid.fa-arrow-up-from-bracket
                div.garbage__box__m
                span Select
            input(type="file", name="video" accept="video/*" requried id="video")
            div.garbage__box__l
            input(name="title" placeHolder="Title" requried type="text" maxlength=80)
            div.garbage__box__l
            input(name="description" placeHolder="Description" requried type="text" minlength=5)
            div.garbage__box__l
            input(name="hashtags" placeHolder="Hashtags, separated by comma." requried type="text")
            div.garbage__box__l
            input(value="Upload" type="submit")